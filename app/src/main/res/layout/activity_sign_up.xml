<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sign-up-layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fbu.instagrom.activities.SignUpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/appName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="cursive"
            android:gravity="center"
            android:text="@string/app_name"
            android:textSize="36sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/emailEditText"
            android:hint="Email"
            android:inputType="textEmailAddress"
            style="@style/editTextBox" />

        <EditText
            android:id="@+id/fullNameEditText"
            android:hint="Full Name"
            android:inputType="textPersonName"
            style="@style/editTextBox" />

        <EditText
            android:id="@+id/usernameEditText"
            android:hint="Username (Required)"
            android:inputType="textPersonName"
            style="@style/editTextBox" />

        <EditText
            android:id="@+id/passwordEditText"
            android:hint="Password (Required)"
            android:inputType="textPassword"
            style="@style/editTextBox" />

        <EditText
            android:id="@+id/confirmPasswordEditText"
            android:hint="Confirm Password (Required)"
            android:inputType="textPassword"
            style="@style/editTextBox" />

        <Button
            android:id="@+id/sigupButton"
            style="@style/roundInstaButton"
            android:backgroundTint="@color/pastelGreen"
            android:text="@string/signup" />

    </LinearLayout>

</RelativeLayout>
